    },

    {
      "id": "Dim",
      "name": {
        "en": "Dim",
        "nl": "Dim"
      },
      "class": "socket",
      "capabilities": [ "onoff", "dim" ],
      "images": {
        "large": "drivers/Dim/assets/images/large.jpg",
        "small": "drivers/Dim/assets/images/small.jpg"
      },

      "pair": [

        {
          "id": "showoptions"

        }
      ]
    }

  ],




